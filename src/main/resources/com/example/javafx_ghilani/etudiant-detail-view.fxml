<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafx_ghilani.controller.EtudiantDetailController"
            prefHeight="400.0" prefWidth="600.0">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <content>
            <VBox spacing="10.0" padding="15">
                <Label text="Détails de l'étudiant" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label text="Code : " fx:id="codeLabel" />
                <Label text="Nom : " fx:id="nomLabel" />
                <Label text="Prénom : " fx:id="prenomLabel" />
                <Label text="Niveau : " fx:id="niveauLabel" />
                <Label text="Filière : " fx:id="filiereLabel" />
            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
